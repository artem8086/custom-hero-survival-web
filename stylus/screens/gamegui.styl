.gamegui
	.btn-fullscreen
		position absolute
		top 10px
		right 10px
		width 64px
		height 64px
		border 1px solid #999
		background-color #999
		text-align center
		box-shadow 0 0 10px rgba(0,0,0,0.5)
		transition background-color ease-in .15s
		border-radius 50%
		&:before
		&:after
			display inline-block
			content ''
			width 26px
			height 26px
			vertical-align middle
			transition all ease-in .15s
		&:before
			border 4px solid #000
		&:after
			position absolute
			width 32px
			height 32px
			left 15px
			top 15px
			background-color #999
			transform-origin center
			transform rotate(45deg)
		&:hover
			background-color #777
			&:after
				background-color #777
		&:active
			&:before
				width 30px
				height 30px
	
	.btn-add-unit
		position absolute
		top 10px
		left 10px
		width 30px
		height 30px
		border 1px solid #fff
		background-color #fff
		font-weight 700
		font-size 30px
		text-align center
		box-shadow 0 0 10px rgba(0,0,0,0.5)
		transition all ease-in .15s
		border-radius 50%
		user-select none
		&:hover
			cursor pointer
			background-color #777
			color #fff
	
	.status
		position absolute
		bottom 60px
		left 60px
		padding 10px
		background-color rgba(1, 1, 1, 0.3)
		border-radius 10px
		pointer-events none
		&__info
			padding 3px 0
			color red
			font-size 22px
